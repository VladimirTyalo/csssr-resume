.about
	margin-bottom 60px

	&__title
		title()
		margin-bottom 14px

	&__text
		margin-bottom 26px
		color font-color-text
		set-font-size(font-size-text)
		line-height 1.5

	&__textarea
		width 100%

		border none

		set-font-size(font-size-input)
		line-height 1.85
		background-color transparent
		background-image linear-gradient(color-borders 2px, transparent 1px)
		background-position 0 1.75em
		background-size 100% 1.85em

@media (max-width 500px)
	.about
		margin-bottom 20px

		&__text
			margin-bottom 15px

		&__textarea
			set-font-size(16px)
