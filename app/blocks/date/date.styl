.date

	&__label
		margin-right 10px
		margin-bottom 0
		display inline-block
		vertical-align bottom
		title()
		set-font-size(22.43px)


	&__input
		padding-left 10px
		display inline-block
		input()
		max-width 240px


@media (max-width 500px)
	.date
		&__input
			max-width 100%
			font-size 16px
