// use this mixin in textarea and it's mirror for syncronizing sizes
textareaStiles()
	margin 0
	padding 0
	font-family font-courier-new
	// Make the text soft-wrap
	white-space pre-wrap
	word-wrap break-word
	// font-size in rems with px fallback
	set-font-size(font-size-input)
	line-height 2
	border none
	outline none


.expanding-area
	position relative
	background transparent

	&__textarea
		box-sizing border-box
		width 100%
		height 100%
		textareaStiles()
		background-color transparent
		background-image linear-gradient(color-borders 2px, transparent 1px)
		background-position 0 1.7em
		background-size 100% 2em

	&__mirror
		display none

	&__mirror-content
		textareaStiles()

	&_active .expanding-area__mirror
		display block
		// hide text => we use it just to get size
		visibility hidden

	&_active  .expanding-area__textarea
		/* Hide any scrollbars */
		position absolute
		top 0
		left 0
		overflow hidden
		height 100%
		resize none
