.personal-info
	margin-bottom 70px

	&__input-wrapper
		position relative
		display flex
		flex-flow row nowrap
		justify-content space-around
		align-items flex-end
		margin-bottom 12px


	&__label
		set-font-size(font-size-label)
		line-height font-size-label

		font-weight bold
		color font-color-inputs

		margin-right 17px
		white-space nowrap

	&__input
		flex 1 0 200px
		background transparent
		border none

		font-size font-size-input
		color font-color-inputs

		padding 7px 15px

		border-bottom 2px solid black
