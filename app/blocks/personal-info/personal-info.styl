.personal-info
	margin-bottom 70px

	&__input-wrapper
		position relative
		display flex
		flex-flow row nowrap
		justify-content space-around
		align-items flex-end
		margin-bottom 12px


	&__label
		margin-right 17px
		set-font-size(font-size-label)
		font-weight bold
		line-height font-size-label
		white-space nowrap
		color font-color-inputs

	&__wrapper
		position relative
		flex 1 0 200px

		// handwriting lines
		&::after
			position absolute
			left -2px
			bottom -.2em
			width 100%
			height .4em
			content ''
			background-image url('../images/line.png')
			background-repeat no-repeat
			background-position -2px center

	&__input
		input()
		width 100%


@media (max-width 920px)
	.personal-info
		&__input-wrapper
			flex-flow row wrap
			justify-content flex-start

		&__label
			set-font-size(18px)
			width 100%

		&__wrapper
			width 100%

		&__input
			set-font-size(20px)
			padding-left 0


@media (max-width 440px)
	.personal-info
		margin-bottom 30px

		&__label
			set-font-size(16px)

		&__input
			set-font-size(18px)
			white-space prewrap
