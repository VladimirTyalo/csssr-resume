.skills
	margin-bottom 56px

	&__title
		title()

	&__description
		margin-bottom 23px
		color font-color-text
		set-font-size(font-size-text)
		line-height 1.5

	&__checkbox-wrapper
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content flex-start

	&__column
		flex-grow 1
		flex-shrink 1

		// adjust widths for pixel perfect
		&:nth-of-type(1)
			flex-basis 249px

		&:nth-of-type(2)
			flex-basis 260px

		&:nth-of-type(3)
			flex-basis 240px


	&__label
		position relative
		padding 7px 5px 7px 28px
		display block
		set-font-size(font-size-checkbox)
		font-weight bold
		cursor pointer

		&:active
			opacity .4

		&::before
			position absolute
			top 10px
			left 0
			content ''
			size(16px, 16px)
			border 2px solid color-borders
			border-radius .2em

	&__input
		display none


// set checkmark on  when input set checked
.skills__input:checked + .skills__label::after
	position absolute
	top 9px
	left 3px
	width 18px
	height 18px
	cursor pointer
	content ''
	background url('../images/icon-check.svg') no-repeat


@media (max-width 500px)
	.skills
		margin-bottom 20px
		&__label
			set-font-size(18px)
