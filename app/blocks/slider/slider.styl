.slider

	&__slide-field
		position relative
		height 25px
		margin-bottom 5px
		border-top 2px solid color-borders
		border-left 2px solid color-borders
		border-right 2px solid color-borders


	&__knob
		position absolute
		top -20px
		left 50%
		width 0
		height 0
		border 8px solid transparent
		border-top 14px solid #2f1b15

	&__notations
		display flex
		flex-flow row no-wwrap
		justify-content flex-start

	&__notation-item
		position relative
		set-font-size(font-size-slider)
		line-height 1.35
		font-weight bold

		&::before
			content ''
			position absolute
			width 2px
			height 15px
			top -30px
			left 0
			background color-borders

		&:nth-of-type(1)
			flex-basis 148px

		&:nth-of-type(2)
			flex-basis 224px

		&:nth-of-type(3)
			flex-basis 200px

		&:last-of-type
			flex-grow 1
			flex-basis 140px
			text-align right
			padding-top 5px

			&::before
				display none
