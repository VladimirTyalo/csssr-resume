.slider
	padding-top 5px
	background-image url('../images/line.png')
	background-repeat repeat-x
	background-position left -3px top -24px

	&__slide-field
		position relative
		margin-bottom 5px
		height 25px
		border-top 2px solid color-borders
		border-left 3px solid color-borders
		border-right 3px solid color-borders

	&__knob
		position absolute
		top -20px
		left 50%
		width 1px
		height 1px
		cursor pointer
		border 8px solid transparent
		border-top 14px solid #2f1b15
		transition transform .3s

	&__notations
		display flex
		flex-flow row no-wwrap
		justify-content flex-start

	&__notation-item
		position relative
		margin-right 5px
		set-font-size(font-size-slider)
		font-weight bold
		line-height 1.35
		cursor pointer

		&:hover
			transform scale(1.05)


		&:nth-of-type(1)
			width 148px
			flex-basis 148px

		&:nth-of-type(2)
			width 224px
			flex-basis 224px

		&:nth-of-type(3)
			width 200px
			flex-basis 200px

		&:last-of-type
			margin-right 0
			padding-top 5px
			flex-grow 1
			flex-basis 140px
			width 140px
			text-align right

			&::before
				display none


@media (max-width 520px)
	.slider

		&__notation-item
			set-font-size(13px)
